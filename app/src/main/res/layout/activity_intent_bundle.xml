<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp"
        tools:context=".IntentBundleActivity">

    <ImageView android:layout_width="100dp"
               android:layout_height="100dp"
               android:id="@+id/ivFotoku"
               android:src="@drawable/pi1"
               android:layout_gravity="center"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
             android:textColor="@android:color/holo_red_dark"
              android:text="NAMA : "
              android:id="@+id/tvNamaku"
             android:textSize="20dp"/>
   <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
             android:textColor="@android:color/black"
             android:text="ALAMAT :"
              android:id="@+id/tvAlamatku"
             android:textSize="20dp"/>
   <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
             android:textColor="@android:color/black"
             android:text="HOBI :"
              android:id="@+id/tvHobiku"
             android:textSize="20dp"
    />
   <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
             android:textColor="@android:color/black"
             android:text="CITAKU :"
              android:id="@+id/tvCitaCitaku"
             android:textSize="20dp"
    />
   <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
             android:textColor="@android:color/black"
             android:text="EMAILKU : "
              android:id="@+id/tvEmailku"
             android:textSize="20dp"
    />

</LinearLayout>